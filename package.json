{
  "name": "home-library",
  "version": "0.0.1",
  "description": "",
  "author": "Andrei Babich",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --testMatch \"<rootDir>/*.spec.ts\" --noStackTrace --runInBand",
    "test:auth": "cross-env TEST_MODE=auth jest --testPathIgnorePatterns refresh.e2e.spec.ts --noStackTrace --runInBand",
    "test:refresh": "cross-env TEST_MODE=auth jest --testPathPattern refresh.e2e.spec.ts --noStackTrace --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "docker:build": "docker-compose -f docker-compose.yml up -d --build",
    "docker:pull": "docker-compose -f docker-compose.hub.yml up -d",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down && docker system prune -af && docker volume rm data logs",
    "docker:scan": "docker scout recommendations andreibabich/home_library_service-app && docker scout recommendations andreibabich/home_library_service-db",
    "docker:scan-cves": "docker scout cves andreibabich/home_library_service-app && docker scout cves andreibabich/home_library_service-db",
    "test:docker": "docker exec -it app npm run test",
    "test:install": "docker exec -it app npm install"
  },
  "dependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "5.2.1",
    "@prisma/client": "^5.11.0",
    "@types/estree": "^1.0.5",
    "@types/js-yaml": "^4.0.9",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.4.5",
    "http-status-codes": "^2.2.0",
    "js-yaml": "^4.1.0",
    "pg": "^8.11.3",
    "prisma": "^5.11.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^8.3.2",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^16.0.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.2.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
